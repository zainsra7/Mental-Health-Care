<?xml version="1.0" encoding="utf-8"?>

<FrameLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <android.support.v7.widget.CardView
        android:id="@+id/ly_root5"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="8dp"
        android:background="#FFFF"
        android:layout_gravity="center"
        >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="69"
        android:id="@+id/numberlikes_post2"
        android:typeface="serif"
        android:textColor="#9B15B3"
       android:paddingRight="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="30dp"
       android:src="@drawable/like"

        android:id="@+id/likeimage"
        android:layout_below="@+id/numberlikes_post2"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Title"
        android:typeface="serif"
        android:textColor="#9B15B3"
        android:id="@+id/postTitle2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:typeface="serif"
        android:textColor="#84CDE8"

        android:text="By Zain, April 20,2016"
        android:id="@+id/postDetail2"
        android:layout_below="@+id/likeimage"
        android:layout_alignParentStart="true" />

</RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>