<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/accent</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
       <item name="android:textColor">#305256</item>
        <item name="colorButtonNormal">#3E0676</item>
        <item name="android:textColorHint">#305256</item>

    </style>

    <style name="Dialogs" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:inAnimation">@anim/from_bottom</item>
        <item name="android:outAnimation">@anim/towards_top</item>
    </style>
    

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
